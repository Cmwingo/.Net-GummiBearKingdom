@{
    ViewData["Title"] = "Gummi Bear Kingdom";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model GummiBearKingdom.Models.Product

<h2>Edit</h2>
<hr />
<h4>Edit this product: @Html.DisplayFor(model => model.Name)</h4>
@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.ProductId)
    <div class="form-group">
        @Html.LabelFor(model => model.Name)
        @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">

        @Html.LabelFor(model => model.Cost)
        @Html.TextBoxFor(model => model.Cost, new { @class = "form-control" })
    </div>
    <div class="form-group">

        @Html.LabelFor(model => model.Origin)
        @Html.TextBoxFor(model => model.Origin, new { @class = "form-control" })
    </div>

    @Html.ValidationSummary()

    <input type="submit" value="Save" class="btn btn-default" />
}
@Html.ActionLink("Back to List", "Index")