@{
    ViewData["Title"] = "Gummi Bear Kingdom";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model GummiBearKingdom.Models.Product

<h2>Create a new product</h2>
<hr />

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(model => model.Name)
        @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">

        @Html.LabelFor(model => model.Cost)
        @Html.TextBoxFor(model => model.Cost, new { @class = "form-control" })
    </div>
    <div class="form-group">

        @Html.LabelFor(model => model.Origin)
        @Html.TextBoxFor(model => model.Origin, new { @class = "form-control" })
    </div>
    @Html.ValidationSummary()


    <input type="submit" value="Create" class="btn btn-default" />
}

